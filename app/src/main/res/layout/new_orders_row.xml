<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/NewOrderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7sp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:gravity="center_vertical"
            android:id="@+id/sellerrow"
            android:padding="11sp">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="#FFEFD5"
                android:contentDescription="CustomerImage"
                android:src="@drawable/baseline_move_to_inbox_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="11sp"
                android:orientation="vertical">

                <TextView
                    android:drawableStart="@drawable/baseline_person_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Customer_Name"
                    android:text="Customer Name"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:drawableStart="@drawable/baseline_call_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Customer_Number"
                    android:text="Number"
                    android:textSize="22sp"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textStyle="bold"/>

                <TextView
                    android:drawableStart="@drawable/baseline_key_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/OrderID"
                    android:text="OrderID"
                    android:textSize="22sp"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>