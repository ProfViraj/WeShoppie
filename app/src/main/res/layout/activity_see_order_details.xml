<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_blue"
    tools:context=".CustomerDashboard.OrderHistory.SeeOrderDetails.SeeOrderDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5sp"
        android:gravity="center">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/logo_1_cropped"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------------------ Cash Memo ------------------"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/bill_no_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Bill No:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/shop_name_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#000000"
            android:layout_margin="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:text="QTY"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#000000"
            android:layout_margin="5sp"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_details_see_recycler"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <View
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#000000"
            android:layout_margin="5sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bill Amount: "
                android:textSize="25sp"
                android:layout_marginStart="10sp"/>

            <TextView
                android:id="@+id/total_cost_see"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Rs."
                android:textSize="25sp"
                android:layout_marginEnd="25sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#000000"
            android:layout_margin="5sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="********** Thank You...! **********"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>