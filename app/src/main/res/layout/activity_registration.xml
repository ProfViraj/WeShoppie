<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Registration"
    android:gravity="center"
    android:background="@color/background_light_blue"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weshoppie"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225sp"
            android:background="@drawable/edit_text_border"
            android:orientation="horizontal">

            <TextView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="@string/get_started_with_your_free_account"
                android:textColor="@color/black"
                android:textSize="33sp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logo_1_cropped"
                android:paddingEnd="15dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fill_out_the_details"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/black"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Cust_Email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"
            android:hint="@string/enter_email_address"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_password"
            android:textColor="@color/black"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Cust_Set_Password"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="@string/set_password"
            android:gravity="center"
            android:inputType="textPassword"/>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Cust_Register"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:textColor="@color/white"
            android:text="@string/register"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/click_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="@string/click_to_login"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>