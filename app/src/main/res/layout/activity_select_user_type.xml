<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_blue"
    tools:context=".login.SelectUserType">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background_light_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Welcome"
            android:text="@string/welcome_to"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Weshoppie"
            android:text="@string/weshoppie"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/Welcome"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectuser"
            android:textColor="@color/black"
            android:text="@string/please_select_the_user_type"
            android:layout_below="@+id/Weshoppie"
            android:layout_marginTop="10sp"
            android:gravity="center"
            />

        <TextView
            android:layout_below="@id/selectuser"
            android:id="@+id/WelcomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Welcome"
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/frame_cust"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/WelcomeUser"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:layout_marginStart="35sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="35sp"
            android:background="@drawable/edit_text_border">

            <Button
                android:id="@+id/customer_login"
                android:layout_width="125sp"
                android:layout_height="70sp"
                android:layout_marginVertical="65sp"
                android:background="@drawable/regular_button"
                android:layout_marginStart="10sp"
                android:text="@string/continue_as_a_customer"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/image_shopkeeper"
                android:layout_width="135sp"
                android:layout_height="135sp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/customer_sign_in" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_frame"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/frame_cust"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:layout_marginStart="35sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="35sp"
            android:background="@drawable/edit_text_border">

            <Button
                android:id="@+id/shopkeeper_login"
                android:layout_width="125sp"
                android:layout_height="70sp"
                android:layout_marginVertical="65sp"
                android:layout_marginStart="10sp"
                android:background="@drawable/regular_button"
                android:text="@string/continue_as_shopkeeper"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/image_customer"
                android:layout_width="135sp"
                android:layout_height="135sp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/shopkeeper_sign_in" />

        </LinearLayout>


        <Button
            android:id="@+id/Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_frame"
            android:layout_marginTop="30sp"
            android:layout_marginStart="75sp"
            android:layout_marginEnd="75sp"
            android:background="@drawable/regular_button"
            android:text="@string/logout"/>

    </RelativeLayout>

</ScrollView>


