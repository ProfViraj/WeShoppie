<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7sp"
        android:id="@+id/select_order"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155sp"
            android:gravity="center_vertical"
            android:padding="11sp">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="#34d1d1"
                android:contentDescription="Order Image"
                android:src="@drawable/baseline_shopping_cart_checkout_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="11sp"
                android:orientation="vertical">

                <TextView
                    android:drawableStart="@drawable/baseline_shopping_cart_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Shop_Name"
                    android:text="Shop Name"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:drawableStart="@drawable/baseline_key_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Order_id"
                    android:text="Bill No"
                    android:textSize="18sp"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textStyle="bold"/>

                <TextView
                    android:drawableStart="@drawable/baseline_category_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Order_date"
                    android:text="Date"
                    android:textSize="22sp"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textStyle="bold"/>

                <TextView
                    android:drawableStart="@drawable/baseline_assignment_turned_in_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Order_status"
                    android:text="Status"
                    android:textSize="22sp"
                    android:paddingStart="5sp"
                    android:layout_marginTop="3sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>